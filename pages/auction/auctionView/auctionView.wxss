/*主容器*/  
.stepper {  
    width:150px;  
    height: 26px;  
    /*给主容器设一个边框*/  
    border: 1rpx solid #f44336;  
    border-radius: 3px;  
    margin:0 auto;  
    
}  
  
/*加号和减号*/  
.stepper text {  
    width: 24px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
    color: #f44336;
}  
  
/*数值*/  
.stepper input {  
    width: 100px;  
    height: 26px;  
    float: left;  
     margin: 0 auto;   
    text-align: center;  
    font-size: 12px;  
    color: #000000;
    /*给中间的input设置左右边框即可*/  
    border-left: 1rpx solid #000000;  
    border-right: 1rpx solid #000000;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  


