@import"../../../wxParse/wxParse.wxss";


.bookSm{
  background-color: #fff;
  display: flex;
  margin-top: 5rpx;
  justify-content:center;
}
.bookSm image{
  /* width: 70%;
  height: 70%; */
  margin-top: 20rpx;
}

.scatitle{
  display: flex;
  font-size: 15px;
  font-weight:700;
  background-color: #fff;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
}
.scatext{
  display: flex;
}
.scatext image{
  width: 30rpx;
  height: 30rpx;
}
.scatext .vtext{
  font-size: 25rpx;
  padding-left: 20rpx;
  padding-top: 8rpx;
}

.scacontent{
  padding-top: 20rpx;
  font-size: 25rpx;
  color: #9D9D9D;
  padding-bottom: 100rpx;
}
/* 底部 */
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}

.button-red {
  background-color: #5af0f5; /* 红色 */
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
}

.total_money{
  padding-left: 20rpx;
  color: red;
  font-size: 40rpx;
}
.total_money_old{
  padding-left: 20rpx;
  color: #9D9D9D;
  text-decoration:line-through;
  font-size: 30rpx;
}
.total_money_con{
  padding-left: 140rpx;
  color: red;
  font-size: 30rpx;
}
.bookList{
  display:flex;
  justify-content: center; 
  height: 13%;
  margin-top: 20rpx;
  padding: 10rpx 10rpx 10rpx 10rpx;
  
}
.bookListImg{
  width: 50%;
height: 100%;

}

.bookListContent{
  width: 50%;
  padding-left: 40rpx;
  
}
.bookListContent .lable{
  font-size: 35rpx;
  color: #3C3C3C;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.bookListContent .text{
  font-size: 14px;
  color: #9D9D9D;
  padding-top: 15rpx;
}
.bookListState{
  width: 20%;
  display:flex;
  justify-content: center; 
  font-size: 30rpx;
  color: red;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  box-sizing: border-box;
  font-family:microsoft yahei;
}
