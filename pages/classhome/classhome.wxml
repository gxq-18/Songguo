<view class="userinfo">
  <text class="userinfo-nickname">请选择您的身份</text>
</view>
<view class="userinfo">
  <form bind:submit="formSubmit" report-submit="true">
    <button class="formBtn" formType="submit" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="stuNavigate" bindtouchstart="mytouchstart">
      <image class="userinfo-avatar" src="{{home_01}}" background-size="cover"></image>
    </button>
  </form>
  <text class="userinfo-nickname">家长/学生登录</text>
</view>
<view class="usermotto"></view>
<view class="userinfo">
  <form bind:submit="formSubmit" report-submit="true">
    <button class="formBtn" formType="submit" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="teaLogin">
      <image class="userinfo-avatar" src="{{home_02}}" background-size="cover"></image>
    </button>
  </form>
  <text class="userinfo-nickname">老师登录</text>
</view>
<view class="usermotto"></view>
<view class="userinfo">
  <form bind:submit="formSubmit" report-submit="true">
    <button class="formBtn" formType="submit" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="tourist">
      <image class="userinfo-avatar" src="{{userInfo!=null?userInfo.avatarUrl:'../../image/login_student@2x.png'}}" background-size="cover"></image>
    </button>
  </form>
  <text class="userinfo-nickname">游客登录</text>
</view>
