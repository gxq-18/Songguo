/**index.wxss**/
@import "../../../utils/common.wxss";
.containerPoster {
  height: 100%;
} 

.card_wrap {
  background: #f2f2f6;
  position: relative;
  width: 100%;
  height: 100%
}
.card_wrap .card_item {
  position: absolute;
  width: 80%;
}
.card_wrap .card_item .buy_btn {
  position: absolute;
  bottom: 43px;
  left: 50%;
  margin-left: -65px;
}
.card_wrap .card_item span.change_icon image {
  position: absolute;
  width: 35px;
  height: 11px;
  top: 14px;
  left: 50%;
  margin-left: -17px;
  box-shadow:none;

}
.card_wrap .card_item .card_info {
  position: absolute;
  height: 94px;
  width: 80%;
  border: 1px #E3E3E3 solid;
}
.card_wrap .card_item .card_info .card_info_mes_title {
  font-size: 18px;
  line-height: 24px;
  margin-left: 28px;
  position: absolute;
  top: -12px;
}
.card_wrap .card_item .card_info .card_info_mes_item {
  margin-left: 28px;
  display: block;
  font-size: 12px;
  line-height: 24px;
}


.card_wrap .card_item.card1 {
  /*top: 62px;
  left: 25px;*/
  transform: translateY(62px) translateX(25px);
  z-index: 3
}
.card_wrap .card_item.card1 .card_info {
  top: 270px;
  left: 20px;
  /*transform: translateY(270px) translateX(20px);*/
}
.card_wrap .card_item.card2 {
  /*top: 44px;
  left: 41px;*/
  z-index: 2;
  transform: translateY(44px) translateX(41px);
}
.card_wrap .card_item.card2 .card_info {
  top: 195px;
  left: 14px;
  border-color: #fff;
}

.card_wrap .card_item.card3 {
  /*top: 28px;
  left: 51px;*/
  transform: translateY(28px) translateX(51px);
  z-index: 1;
}

.card_wrap .card_item.card3 .card_info {
  top: 73px;
  left: 50px;
  border-color: #fff;
}
.card_wrap .card_item image {
  display: block;
  width: 100%;
  border-radius: 6px;
  box-shadow: 6px 23px 50px 10px #ccc;
}


.btn-cta {
  width: 130px;
  height: 40px;
  border-radius: 3px;
  font-size: 14px;
  line-height: 40px;
  color: #fff;
  text-align: center;
  background-color: #00c9a9;
}
.font-light {
  font-weight: 100;
}
.font-nomal {
  font-weight: normal;
}

.content3 {
  color: #4a4a4a;
}

.content2 {
  color: #9B9B9B;
}

.content1 {
  color: #333333;  
}

